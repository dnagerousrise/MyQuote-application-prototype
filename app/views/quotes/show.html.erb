<!-- Show relevant quote -->
<%= render @quote %>
<!-- Allow only for the quote owner and administrator -->
<% if current_user && (current_user == @quote.user || current_user.is_admin?) %>
  <div class="mt-3 d-flex gap-2 flex-wrap">
    <%= link_to "Back to quotes", quotes_path, class: "btn btn-sm btn-secondary" %>  
    <%= link_to "Edit this quote", edit_quote_path(@quote), class: "btn btn-sm btn-outline-primary" %>
    <%= button_to "Destroy this quote", @quote, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
    </div>
<% else %>
  <div class="mt-3">
      <%= link_to "Back to home", root_path, class: "btn btn-sm btn-secondary" %>
  </div>
<% end %>

