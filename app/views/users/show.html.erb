<!-- Manage User-->
<p style="color: green"><%= notice %></p>
<div style="padding-top: 10px;">
  <% if logged_in? && is_administrator? %>
    <h3>Update User Details</h3>
    <% else %>
    <h3>Update Your Details</h3>
  <% end %>
</div>

<%= render @user %>
<% if logged_in? && is_administrator? %>
  <div>
    <div style= "padding-bottom: 20px;">
      <%= link_to "Edit this user", edit_user_path(@user), class: 'btn btn-sm btn-secondary' %> |
      <%= link_to "Back to users", users_path, class: 'btn btn-sm btn-secondary' %>
    </div>
    <div style="padding-top: 20px;">
      <%= button_to "Delete Account", @user, method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
<%end%>
